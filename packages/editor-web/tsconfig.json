{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["vite/client"],
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@supabase-functions": ["../../supabase/functions/index.ts"],
      "@supabase-functions/*": ["../../supabase/functions/*"]
    }
  },
  "include": ["src", "../../supabase/functions"]
}
